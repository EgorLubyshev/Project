<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/linear1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:layout_height="0dp"
        android:layout_weight="100">

        <TextView
            android:id="@+id/text_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="1234"
            android:textColor="#FFFFFF" />
    </RelativeLayout>

    <RelativeLayout
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100">

        <TextView
            android:id="@+id/answer"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ramka"
            android:gravity="center"
            android:foregroundGravity="right"
            android:text=""
            android:textColor="@color/black"
            android:layout_weight=".100"

            />
        <TextView
            android:id="@+id/answer2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/answer"
            android:background="@drawable/ramka"
            android:gravity="center"
            android:foregroundGravity="right"
            android:text=""
            android:textColor="@color/black"
            android:layout_weight=".100"
            />
        <TextView
            android:id="@+id/answer3"
            android:layout_width="100dp"
            android:layout_toRightOf="@+id/answer2"
            android:layout_height="wrap_content"
            android:background="@drawable/ramka"
            android:gravity="center"
            android:foregroundGravity="right"
            android:text=""
            android:textColor="@color/black"
            android:layout_weight=".100"

            />
        <TextView
            android:id="@+id/answer4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/answer3"
            android:background="@drawable/ramka"
            android:gravity="center"
            android:foregroundGravity="right"
            android:text=""
            android:textColor="@color/black"
            android:layout_weight=".100"
            />

        <TextView
            android:id="@+id/check"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ramka"
            android:gravity="center"
            android:text="проверить"
            android:textColor="@color/black"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            />


    </RelativeLayout>
    <RelativeLayout
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100">

        <TextView
            android:id="@+id/c1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="print"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/w1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_toRightOf="@+id/c1"
            android:text="@string/str"
            android:visibility="invisible"
            android:textColor="@color/white" />



        <TextView
            android:id="@+id/c2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_below="@+id/c1"
            android:text="  ("
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/w2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_toRightOf="@+id/c2"
            android:layout_below="@+id/c1"
            android:text="@string/str"
            android:visibility="invisible"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/c3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_below="@+id/c2"
            android:text="  )"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/w3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_toRightOf="@+id/c3"
            android:layout_below="@+id/c2"
            android:text="@string/str"
            android:visibility="invisible"
            android:textColor="@color/white" />





        <TextView
            android:id="@+id/c4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_below="@+id/c3"
            android:text="@string/str21"
            android:textColor="@color/white" />
        <TextView
            android:id="@+id/w4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_toRightOf="@+id/c4"
            android:layout_below="@+id/c3"
            android:text="@string/str"
            android:visibility="invisible"
            android:textColor="@color/white" />


    </RelativeLayout>


</LinearLayout>